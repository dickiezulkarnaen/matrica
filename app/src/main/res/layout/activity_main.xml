<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:onClick="gotoInputPegawai"
        android:text="Input Data Pegawai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="gotoInputLokasi"
        android:text="Input Data Lokasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="gotoRiwayatJabatan"
        android:text="Riwayat Jabatan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="gotoReport"
        android:text="Report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>